{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true,
        "jquery": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "plugin:wdio/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "plugins": [
        "wdio"
    ]
}
// npm install eslint --save-dev
//$ npx eslint --init